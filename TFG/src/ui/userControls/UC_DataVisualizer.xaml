<UserControl x:Class="TFG.src.ui.userControls.UC_DataVisualizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid HorizontalAlignment="Stretch" Width="300" Height="300" VerticalAlignment="Bottom">
        
        <Border BorderThickness="1" BorderBrush="Black" Background="White" Margin="4">
            
            <Polygon Name="myData" Stretch="Fill" Fill="Black" Opacity="0.8" />
        </Border>
        
    </Grid>
    
</UserControl>
