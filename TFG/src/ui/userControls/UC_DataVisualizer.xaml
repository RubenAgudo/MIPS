<UserControl ResxExtension.DefaultResxName="TFG.src.ui.userControls.UC_DataVisualizer" Language="{UICulture}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oxy="http://oxyplot.codeplex.com"
             xmlns:ViewModels="clr-namespace:TFG.src.ViewModels" 
			 x:Class="TFG.src.ui.userControls.UC_DataVisualizer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" >

	<Grid >
		
		<DockPanel>

			<Menu DockPanel.Dock="Top">
				<MenuItem Header="{Resx Key=_saveRange.Header}" Name="mnitSaveRange" Click="mnitSaveRange_Click" />
			</Menu>
			
			<oxy:Plot x:Name="oxyplot" HorizontalContentAlignment="Stretch" 
					  VerticalContentAlignment="Stretch" IsManipulationEnabled="True" 
					  Model="{Binding DataContext.Model, Mode=OneWay, RelativeSource={RelativeSource Self}}"> <!---->

				<oxy:LineSeries LineStyle="Solid"  >
					<oxy:RectangleAnnotation MinimumX="0" />
				</oxy:LineSeries>
				

			</oxy:Plot>

		</DockPanel>
	</Grid>

</UserControl>
